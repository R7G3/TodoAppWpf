<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TodoAppWpf.Styles">

    <Style
        x:Key="Window.Style"
        TargetType="Window">

        <Setter
            Property="MinHeight"
            Value="350"/>

        <Setter
            Property="MinWidth"
            Value="330"/>

        <Setter
            Property="Height"
            Value="350"/>

        <Setter
            Property="Width"
            Value="500"/>

    </Style>

    <Style
        x:Key="Window.Style.EditorDialog"
        TargetType="Window">

        <Setter
            Property="MinHeight"
            Value="260"/>

        <Setter
            Property="MinWidth"
            Value="300"/>

        <Setter
            Property="Height"
            Value="260"/>

        <Setter
            Property="Width"
            Value="300"/>

    </Style>
    
</ResourceDictionary>